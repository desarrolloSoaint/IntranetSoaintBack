{
    "openapi": "3.0.0",
    "info": {
        "title": "Swagger API Documentation",
        "description": "Laravel",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000/",
            "description": "Demo API Server"
        }
    ],
    "paths": {
        "/api/getRoles": {
            "get": {
                "tags": [
                    "Roles"
                ],
                "summary": "Obtener los roles",
                "operationId": "App\\Http\\Controllers\\RoleController::getRoles",
                "responses": {
                    "422": {
                        "description": "Error al obtener los Roles"
                    },
                    "200": {
                        "description": "Exito al obtener los roles"
                    }
                }
            }
        },
        "/api/addRole": {
            "get": {
                "tags": [
                    "Roles"
                ],
                "summary": "Agregar Roles",
                "operationId": "App\\Http\\Controllers\\RoleController::addRole",
                "requestBody": {
                    "description": "Introducir Datos",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "type"
                                ],
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "Usuario"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "Error al agregar un rol"
                    },
                    "200": {
                        "description": "Exito al agregar un rol"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/getRules": {
            "get": {
                "tags": [
                    "Rules"
                ],
                "summary": "Obtener reglas",
                "operationId": "App\\Http\\Controllers\\RuleController::index",
                "responses": {
                    "200": {
                        "description": "Reglas Obtenidas con Exito"
                    },
                    "422": {
                        "description": "Error al Obtener las Reglas"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/addRules": {
            "post": {
                "tags": [
                    "Rules"
                ],
                "summary": "Registrar regla",
                "operationId": "App\\Http\\Controllers\\RuleController::store",
                "requestBody": {
                    "description": "Introducir Datos",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "description"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "Hora de Entrada"
                                    },
                                    "description": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "8:00 AM"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Regla Registrada"
                    },
                    "422": {
                        "description": "Error al Registrar la Regla"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "Security"
                ],
                "summary": "Registrar usuarios",
                "operationId": "App\\Http\\Controllers\\UserController::register",
                "requestBody": {
                    "description": "Introducir Datos",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password",
                                    "role_id"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "ejemplo@mail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "Contraseña"
                                    },
                                    "role_id": {
                                        "type": "integer",
                                        "format": "integer",
                                        "example": "1"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuario Registrado"
                    },
                    "422": {
                        "description": "Error de Validacion."
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Security"
                ],
                "summary": "Login",
                "requestBody": {
                    "description": "Introducir Datos",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "ejemplo@mail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "Contraseña"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "Error de Validacion"
                    },
                    "200": {
                        "description": "Login Exitoso."
                    },
                    "401": {
                        "description": "Error de Credenciales."
                    }
                }
            }
        },
        "/api/refreshToken": {
            "post": {
                "tags": [
                    "Token"
                ],
                "summary": "Refresh Token",
                "operationId": "App\\Http\\Controllers\\UserController::refreshToken",
                "responses": {
                    "422": {
                        "description": "Error al refrescar el token"
                    },
                    "200": {
                        "description": "Refresh Token Exitoso"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Security"
                ],
                "summary": "Logout",
                "operationId": "App\\Http\\Controllers\\UserController::logout",
                "responses": {
                    "422": {
                        "description": "Error al cerrar sesion"
                    },
                    "200": {
                        "description": "Logout Exitoso."
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/getUserRole": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Obtener Rol del Usuario",
                "operationId": "App\\Http\\Controllers\\UserController::getUserRole",
                "requestBody": {
                    "description": "Introducir Datos",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "ejemplo@mail.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Exito"
                    },
                    "422": {
                        "description": "Error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    },
    "security": [
        []
    ]
}